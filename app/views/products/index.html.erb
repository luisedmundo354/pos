<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-4 text-left">
      <h1><%= t('Products') %></h1>
    </div>

    <div class="col-md-4 offset-md-4 text-right">
      <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_product_path %>
    </div>
  </div>



<%= form_for_filterrific @filterrific do |f| %>
<div class="form-row">
  <div class="form-group col-md-6">
    <label for="inputProduct"><%=t('Search')%></label>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed form-control',
      id: 'inputProduct'
    ) %>
  </div>
  <div class="form-group col-md-4">
    <label for="selectCategory"><%=t('Category')%></label>
    <%= f.select(
      :with_category_id,
      @filterrific.select_options[:with_category_id],
      { include_blank: t('Any') },
      class: 'form-control',
      id: 'selectCategory'
    ) %>
  </div>
  <div class="form-group col-md-2">
    <label for="selectLevel"><%=t('Level')%></label>
    <%= f.select(:with_level, @filterrific.select_options[:with_level],
    { include_blank: t('Any') },
    class: 'form-control',
    id: 'selectLevels'
    ) %>
  </div>
  <%= render_filterrific_spinner %>
</div>
<%end%>


<%= render(
  partial: 'products/draft',
  locals: { products: @products }
) %>
  <p><%= link_to t('Generate list'), list_items_path(@list_items, :format => :pdf), class: "btn btn-primary" %></p>
</div>
