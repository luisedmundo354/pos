<%= form_for @purchase_order do |form| %>
  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, id: :purchase_order_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_field :comment, id: :purchase_order_comment, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :replenisher %>
    <%= form.collection_select :replenisher_id, Replenisher.all, :id, :lname, {prompt: true}, {:class=>"form-control"}  %>
  </div>

  <table class="table">
    <thead>
    <tr>
      <th scope="col"><%=t('Product')%></th>
      <th scope="col"><%=t('Quantity')%></th>
      <th scope="col"><%=t('Price')%></th>
      <th colspan="1" scope="col">Actions</th>
    </tr>
  </thead>
    <tbody class="purchase_items">
      <%= form.fields_for :purchase_items do |purchase_item| %>
        <%= render 'purchase_item_fields', form: purchase_item %>
      <%end%>
    </tbody>
  </table>
  <div class="text-center">
      <%= link_to_add_association t('Add item'), form, :purchase_items, form_name: 'form', data: {"association-insertion-node" => "tbody.purchase_items", "association-insertion-method" => "append"}, class: "btn btn-outline-dark btn-sm" %>
  </div>
  <div class="actions">
    <%= form.submit :class=>"btn btn-primary"%>
  </div>
<% end %>
