<!DOCTYPE html>
<html>
<head>
  <title>InventorySys</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <% I18n.available_locales %>
  <%= favicon_link_tag asset_path('favicon.ico') %>
</head>

<body>
  <div class="wrapper">
    <!--Navbar content -->
    <nav id="sidebar" class="navbar-expand-lg navbar-light bg-light">
      <div class="sidebar-header">
          <h3><%=t('Inventory')%></h3>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%= link_to sale_orders_path, { :class=>"nav-link" } do%>
            <i class="fa fa-share-square-o" aria-hidden="true"></i>
            <%=t('Sale_orders')%>
          <%end%>
        </li>
        <li class="list-group-item">
          <%= link_to purchase_orders_path, { :class=>"nav-link" } do%>
          <i class="fa fa-cart-plus" aria-hidden="true"></i>
          <%=t('Purchase_orders')%>
          <%end%>
        </li>
        <li class="list-group-item">
          <%= link_to products_path, { :class=>"nav-link" } do%>
          <i class="fa fa-product-hunt" aria-hidden="true"></i>
          <%=t('Products')%>
          <%end%>
        </li>
        <li class="list-group-item">
          <%= link_to categories_path, { :class=>"nav-link" } do%>
          <i class="fa fa-clone" aria-hidden="true"></i>
          <%=t('Categories')%>
          <%end%>
        </li>
        <li class="list-group-item">
          <%= link_to suppliers_path, { :class=>"nav-link" } do%>
          <i class="fa fa-truck" aria-hidden="true"></i>
          <%=t('Suppliers')%>
          <%end%>
        </li>
        <li class="list-group-item">
          <%= link_to customers_path, { :class=>"nav-link" } do%>
          <i class="fa fa-male" aria-hidden="true"></i>
          <%=t('Customers')%>
          <%end%>
        </li>
        <li class="list-group-item">
          <%= link_to replenishers_path, { :class=>"nav-link" } do%>
          <i class="fa fa-share-square-o" aria-hidden="true"></i>
          <%=t('Replenishers')%>
          <%end%>
        </li>
      </ul>
    </nav>

    <!--start content-->
    <div id="content" class="flex-fill">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
              <button type="button" id="sidebarCollapse" class="btn btn-info">
                  <span class="navbar-toggler-icon"></span>
              </button>
          </div>
      </nav>
      <%= yield %>
    </div>
  </div>
</body>
</html>
